{
	"compilerOptions": {
		"baseUrl": "./",
		"paths": {
			"@test/*": ["./test/*"],
			"@src/*": ["./src/*"]
		},
		"inlineSourceMap": true,
		"inlineSources": true,
		"module": "ESNext",
		"target": "ES6",
		"allowJs": true,
		"noImplicitAny": true,
		"moduleResolution": "node",
		"importHelpers": true,
		"isolatedModules": true,
		"strictNullChecks": true,
		"verbatimModuleSyntax": true,
		"lib": ["DOM", "ES5", "ES6", "ES7"],
		"outDir": "./build",
		"skipDefaultLibCheck": true,
		"skipLibCheck": true
	},
	"include": ["**/*.ts"]
}
